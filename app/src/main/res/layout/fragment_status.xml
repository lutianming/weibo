<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.lambda.weibo.fragments.StatusFragment">
    <com.android.volley.toolbox.NetworkImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_profile_image_view"
            android:maxHeight="@dimen/profile_middle" android:maxWidth="@dimen/profile_middle" android:minHeight="@dimen/profile_middle"
            android:nestedScrollingEnabled="true" android:minWidth="@dimen/profile_middle" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_user_textview"
            android:text="username"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/status_profile_image_view"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/status_time_textview" android:text="time"
            android:layout_alignBottom="@+id/status_profile_image_view" android:layout_toEndOf="@+id/status_profile_image_view"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/status_text_textview" android:text="text"
            android:layout_below="@+id/status_time_textview" android:layout_centerHorizontal="true"/>


    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:scrollbars="vertical"
                  android:id="@+id/comments_recycle_view" android:layout_below="@+id/status_text_textview"/>

</RelativeLayout>
