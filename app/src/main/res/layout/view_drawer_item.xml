<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:minHeight="@dimen/item">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_image_view" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:minHeight="@dimen/item" android:minWidth="@dimen/item"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/item_text_view" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/item_image_view"/>

</RelativeLayout>